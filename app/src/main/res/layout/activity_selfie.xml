<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".SelfieActivity">

    <TextView
        android:id="@+id/text_selfie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:textStyle="bold"
        android:text="Upload Your Selfie"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_capture_selfie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Selfie"
        android:layout_marginBottom="18dp"
        android:textSize="18sp"
        />

    <!-- Add ImageView here -->
    <ImageView
        android:id="@+id/image_selfie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Captured Selfie" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="26dp"
        android:text="Submit" />

</LinearLayout>
